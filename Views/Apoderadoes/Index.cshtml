@model IEnumerable<DemoDevJr.Models.Apoderado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h2>Index</h2>

<p>    
    <a href="@Url.Action("Create", "Apoderadoes")" type="button" class="btn btn-primary">Agregar Nuevo Apoderado</a>
</p>
<table class="table table-bordered table-striped table-sm">
    <tr>
        <th>
            Alumno
        </th>
        <th>
            Ocupacion
        </th>
        <th>
            Nombres
        </th>
        <th>
            Apellido Paterno
        </th>
        <th>
            ApellidoMaterno
        </th>
        <th>
            Sexo
        </th>
        <th>
            Lugar de Nacimiento
        </th>
        <th>
            Fecha de Nacimiento
        </th>
        <th>
            CI
        </th>
        <th>
            Direccion
        </th>
        <th>
            Zona
        </th>
        <th>
            Telefono
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.alumno.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ocupacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoPaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoMaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lugarNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ci)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>            
            <a href="/Apoderadoes/Edit/@item.id" type="button" class="btn btn-warning btn-sm">
                <i class="fas fa-pen"></i>
            </a>
            <a href="/Apoderadoes/Details/@item.id" type="button" class="btn btn-info btn-sm">
                <i class="fas fa-eye"></i>
            </a>
            <a href="/Apoderadoes/Delete/@item.id" type="button" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
            </a> 
        </td>
    </tr>
}

</table>
