@model IEnumerable<DemoDevJr.Models.Curso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h2>Index</h2>

<p>    
    <a href="@Url.Action("Create", "Cursoes")" type="button" class="btn btn-primary">Agregar Nuevo Curso</a>
</p>
<table class="table table-bordered table-striped table-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.grado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paralelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nivel)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.grado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paralelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nivel)
        </td>
        <td>            
            <a href="/Cursoes/Edit/@item.cursoId" type="button" class="btn btn-warning btn-sm">
                <i class="fas fa-pen"></i>
            </a>
            <a href="/Cursoes/Details/@item.cursoId" type="button" class="btn btn-info btn-sm">
                <i class="fas fa-eye"></i>
            </a>
            <a href="/Cursoes/Delete/@item.cursoId" type="button" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
